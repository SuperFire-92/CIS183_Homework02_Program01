<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_v_customCell_redText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Red: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_customCell_greenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Green: "
        app:layout_constraintStart_toEndOf="@+id/tv_v_customCell_red"
        app:layout_constraintTop_toTopOf="@+id/tv_v_customCell_red" />

    <TextView
        android:id="@+id/tv_v_customCell_blueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Blue: "
        app:layout_constraintStart_toEndOf="@+id/tv_v_customCell_green"
        app:layout_constraintTop_toTopOf="@+id/tv_v_customCell_green" />

    <TextView
        android:id="@+id/tv_v_customCell_hexText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Hex: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_customCell_redText" />

    <TextView
        android:id="@+id/tv_v_customCell_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_v_customCell_redText"
        app:layout_constraintTop_toTopOf="@+id/tv_v_customCell_redText" />

    <TextView
        android:id="@+id/tv_v_customCell_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_v_customCell_greenText"
        app:layout_constraintTop_toTopOf="@+id/tv_v_customCell_greenText" />

    <TextView
        android:id="@+id/tv_v_customCell_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_v_customCell_blueText"
        app:layout_constraintTop_toTopOf="@+id/tv_v_customCell_blueText" />

    <TextView
        android:id="@+id/tv_v_customCell_hex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_v_customCell_hexText"
        app:layout_constraintTop_toTopOf="@+id/tv_v_customCell_hexText" />

</androidx.constraintlayout.widget.ConstraintLayout>